IF
	Clicked([ANYONE])
	Range(LastTrigger,10)
	Global("Star1","AR3637",0)
	Global("Star2","AR3637",1)
	Global("Star3","AR3637",0)
	Global("Star4","AR3637",0)
	Global("Star5","AR3637",0)
THEN
	RESPONSE #100
		DisplayString(Myself,@550131)
		SetGlobal("Star5","AR3637",1)
		PlaySound("EFF_M62")
